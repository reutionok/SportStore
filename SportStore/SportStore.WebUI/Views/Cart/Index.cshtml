@model SportStore.WebUI.Models.CartIndexViewModel

@{
    ViewBag.Title = "Ваша корзина";
}

    <style>
        #cartTable td {
            vertical-align: middle;
        }
    </style> 

<h2>Ваша корзина</h2>
<table id="cartTable" class="table" >
    <thead>
        <tr>
            <th class="text-left">Кол-во</th>
            <th class="text-left">Товар</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Общая цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
        <tr>
            <td class="text-left">@line.Quantity</td>
            <td class="text-left">@line.Product.Name</td>
            <td class="text-right">@line.Product.Price.ToString("# грн")</td>
            <td class="text-right">
                @((line.Quantity * line.Product.Price).ToString("# грн"))
            </td>
            <td>
                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                {
                    @Html.Hidden("ProductID", line.Product.ProductID)
                    @Html.HiddenFor(x => x.ReturnUrl)
                    <input class="btn btn-sm btn-warning" type="submit" value="Удалить" />
                }
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого:</td>
            <td class="text-right">
                @Model.Cart.ComputeTotalValue().ToString("# грн")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    @Html.ActionLink("Продолжить покупку", "List", "Product",null, new { @class = "btn btn-primary" })
    @*<a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>*@
    @Html.ActionLink("Оформить заказ", "Checkout", null, new { @class = "btn btn-primary" })
</div>

